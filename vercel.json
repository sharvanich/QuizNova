{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend.py"
    },
    {
      "source": "/generate-quiz",
      "destination": "/backend.py"
    },
    {
      "source": "/validate-answer",
      "destination": "/backend.py"
    },
    {
      "source": "/health",
      "destination": "/backend.py"
    }
  ]
}