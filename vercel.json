{
  "version": 2,
  "builds": [
    {
      "src": "backend.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/generate-quiz",
      "dest": "/backend.py"
    },
    {
      "src": "/validate-answer",
      "dest": "/backend.py"
    },
    {
      "src": "/health",
      "dest": "/backend.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}