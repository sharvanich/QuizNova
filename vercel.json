{
  "version": 2,
  "builds": [
    {
      "src": "backend.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend.py"
    },
    {
      "src": "/generate-quiz",
      "dest": "backend.py"
    },
    {
      "src": "/validate-answer",
      "dest": "backend.py"
    },
    {
      "src": "/health",
      "dest": "backend.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}